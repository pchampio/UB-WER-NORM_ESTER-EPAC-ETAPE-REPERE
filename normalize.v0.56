sub encodingtest () {
    my ($encoding)=@_;
    require Encode;
    if ($encoding =~ /^Guess$/) {
	return 1;
    }
    else {
	
	if (Encode::resolve_alias($encoding)) {return 1;}
	@all_encodings = Encode->encodings(":all"); 
	foreach $known_encoding (@all_encodings) {
	    if ($encoding eq  $known_encoding) {
		return 1;
	    }
	}
    }
    return 0;
}


